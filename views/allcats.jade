extends layout

block content
  title= title
  br
  h1= 'Listing all the cats'
  br
  h2= 'Sorted by age in ascending order'
  br
  br
  div
    table
      thead
        tr: th Name
            th Age
            th Colors
      tbody
        each cat in allcats
          tr
            td
              p= cat.name
            td
              p= cat.age
            td
              p= cat.colors
